<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox id="cardPane" fx:id="cardPane" alignment="CENTER_LEFT" onMouseClicked="#handleMouseClicked" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="5" left="15" right="15" top="5" />
    </padding>
    <Label fx:id="id" style="-fx-background-color: white;                               -fx-background-radius: 8;                               -fx-text-fill: black;                               -fx-font-family: Arial;                               -fx-font-weight: 900;                               -fx-font-size: 12px;                               -fx-alignment:center;" styleClass="cellHeader">
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
    </Label>
    <Label fx:id="title" style="-fx-font-family: Arial;                               -fx-font-weight: 900;                               -fx-font-size: 16px;" text="\$first">
        <padding>
            <Insets bottom="5" left="10" right="5" top="5" />
        </padding>
    </Label>
</HBox>
